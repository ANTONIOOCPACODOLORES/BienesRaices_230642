extends ../layout/index

block contenido
    div 
        h1.text-center.text-4xl.my-10.font-extrabold.text-vino Bienes
            span.font-normal.text-negro Raices
        h2.text-center.font-extrabold.text-2xl= page

        //- Mostrar errores si existen
        if errors && errors.length > 0
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                    
        .mt-8.mx-auto.max-w-md
            .bg-blanco.py-8.px-4.shadow.rounded-lg
                form(action="/auth/login").space-y-5.px-6
                    div    
                        label.block.text-sm.uppercase.text-blanco.mb-2.font-bold Correo electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="email" placeholder="ej. usuario@dominio.com" name="correo_usuario")  
                    div    
                        label.block.text-sm.uppercase.text-blanco.mb-2.font-bold Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="password" placeholder="mínimo de 8 caracteres" name="pass_usuario")  
                    div.flex.items-center.justify-between
                        a.text-rosaF.text-xs(href="/auth/createAccount" class="hover:underline hover:decoration-vino") ¿Aún no tienes cuenta? Regístrate
                        a.text-rosaF.text-xs(href="/auth/passwordRecovery" class="hover:underline hover:decoration-vino") Olvidé mi contraseña
                    input(class="w-full bg-vino hover:bg-rosaF text-blanco font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Iniciar sesión")
