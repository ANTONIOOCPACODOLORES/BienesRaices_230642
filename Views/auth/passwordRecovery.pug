extends ../layout/index

block contenido
    div
        h1.text-center.text-4xl.my-10.font-extrabold.text-vino Bienes Raíces
        h2.text-center.font-extrabold.text-2xl.text-negro= page

        //- Mostrar errores si existen
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-rosaF.text-blanco.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-xl
            .bg-verde.py-8.px-4.shadow.rounded-lg
                form(method="POST" action="/auth/passwordRecovery" noValidate).space-y-5.px-6
                    //- Campo para el token CSRF
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div    
                        label.block.text-sm.uppercase.text-negro.mb-2.font-bold Correo electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="email" placeholder="ej. usuario@dominio.com" name="correo_usuario")  
                    
                    div.flex.items-center.justify-between
                        a.text-rosaF.text-xs(href="/auth/createAccount" class="hover:underline decoration-2 hover:decoration-blanco") ¿Aún no tienes cuenta? Regístrate
                        a.text-rosaF.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-blanco") ¿Ya tienes una cuenta? Inicia sesión
                    
                    input(class="w-full bg-vino hover:bg-rosaF text-blanco font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Recuperar Contraseña")
