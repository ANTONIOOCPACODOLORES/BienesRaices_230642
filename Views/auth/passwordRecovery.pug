extends ../layout/index

block contenido
    div 
        h1.text-center.text-4xl.my-10.font-extrabold.text-darkblue Bienes
            span.font-normal.text-black Raices
        h2.text-center.font-extrabold.text-2xl= page

        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow
                form(action="").space-y-5.px-6
                    div    
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-hold Correo electronico:
                        input#email.w-full.px-3.py-2.border.border-gray3.rounded-xl.placeholder.gray-400(type="email" placeholder="ej. usuario@dominio.com" name="correo_usuario")  
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/createAccount" class="hover:underline decoration-2 hover:decoration-babygray") ¿Aun no tienes cuenta? Registrate
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-babygray") ¿Ya tienes una cuenta? Inicia Sesión
                    input(class="w-full bg-darkblue hover:bg-babyblue text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar Contraseña")