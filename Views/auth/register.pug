extends ../layout/index


block contenido
    div 
        h1.text-center.text-4xl.my-10.font-extrabold.text-darkblue Bienes
            span.font-normal.text-black Raices
        h2.text-center.font-extrabold.text-2xl= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action='/auth/newUser' noValidate).space-y-5.px-6
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-hold Nombre Completo:
                        input#name.w-full.px-3.py-2.border.border-gray3.rounded-xl.placeholder.gray-400(type="text" placeholder="Ingresa tu nombre con apellidos" name="nombre_usuario")  
                    div    
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-hold Correo electronico:
                        input#email.w-full.px-3.py-2.border.border-gray3.rounded-xl.placeholder.gray-400(type="email" placeholder="ej. usuario@dominio.com" name="correo_usuario")  
                    div    
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-hold Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray3.rounded-xl.placeholder.gray-400(type="password" placeholder="Mínimo de 8 caracteres" name="pass_usuario")  
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-hold Confirmacion Contraseña:
                        input#password-confirm.w-full.px-3.py-2.border.border-gray3.rounded-xl.placeholder.gray-400(type="password" placeholder="Mínimo de 8 caracteres, igual a la anterior" name="pass2_usuario")  
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-babygray") ¿Ya tienes una cuenta? Inicia sesion
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-babygray") Olvide mi contraseña
                    input(class="w-full bg-darkblue hover:bg-babyblue text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")